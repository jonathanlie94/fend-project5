.nbm-side-content
  width: 350px
  max-width: 350px
  height: 100%
  max-height: 100%
  position: relative
  color: $white1
  overflow-y: auto
  overflow-x: hidden
  vertical-align: top

.nbm-search-bar
  padding: 0 1em
  width: 350px
  border-bottom: 1px solid $blue
  font-size: 20px
  height: 3em
  display: block
  position: fixed
  background-color: $indigo

  &__icon
    width: 0.5em
    padding-right: 1em
    display: inline-block
    .material-icons
      font-size: 1em
  &__content
    width: calc(100% - 4em)
    vertical-align: middle
    display: inline-block

    .mdl-textfield
      width: 100%
    .mdl-textfield__input
      border-bottom: 1px solid $white1

.nbm-list
  margin-top: 5em
  overflow-y: scroll
  width: 350px
  &__item
    padding: 0.5em 0 0.5em 4em
    line-height: 32px
    display: block
    cursor: pointer
    &:hover
      background-color: $pink
