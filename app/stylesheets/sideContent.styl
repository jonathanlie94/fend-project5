.nbm-search-bar
  padding: 0 1em
  border-bottom: 1px solid $blue
  font-size: 20px
  height: 3em
  display: block
  position: fixed
  background-color: $indigo

  &__icon
    width: 0.5em
    padding-right: 1em
    display: inline-block
    .material-icons
      font-size: 1em
  &__content
    width: calc(100% - 2em)
    vertical-align: middle
    display: inline-block

    .mdl-textfield
      width: 100%
    .mdl-textfield__input
      border-bottom: 1px solid $white1

.nbm-list
  margin-top: 5em
  &__item
    padding: 0.5em 0.5em 0.5em 2em
    line-height: 32px
    display: block
    cursor: pointer
    font-size: 0.875em
    border-bottom: 1px solid $white1
    &:hover
      background-color: $pink

.mdl-layout__drawer
  background-color: $indigo
  color: $white1

.mdl-layout__drawer-button
  background-color: $indigo
  i
    color: $white1
