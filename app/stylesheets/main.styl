@import 'variables/color'
@import 'mixins/mixins'
@import 'mainContent'
@import 'sideContent'

html
  width: 100%
  height: 100%
  font-family: 'Roboto'
  font-size: 16px
  font-weight: 300
  background-color: $indigo
  color: $white

  body
    margin: 0px
    height: 100%

    .nbm-main-container
      width: 100%
      height: 100%
      overflow-y: auto
      overflow-x: hidden
      display: flex

    #map
      width: 100%
      height: 100%

    a
      color: $blue
      &:hover
        transition: 0.2s ease
        cursor: pointer

    ul
      padding: 0

.page-content
  height: 100vh

.nbm-error-message
  &__container
    position: fixed
    z-index: 99999
    padding: 1em
    bottom: 0%
    width: 100%
    background-color: $red
  &__text
    color: $white1
